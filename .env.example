# Provider Configuration
# Options: 'anthropic', 'openai', 'ollama'
STASIS_PROVIDER=anthropic

# Anthropic Settings (when STASIS_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI Settings (when STASIS_PROVIDER=openai)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4

# Ollama Settings (when STASIS_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Memory Configuration
STASIS_WORKSPACE=./workspace

# Optional: Override default max tokens
# STASIS_MAX_TOKENS=4096

# Number of exchanges to retain across restarts (default 5)
# Set to 0 to start fresh each session
# STASIS_HISTORY_DEPTH=5
